<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/border_round_white"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/recycler_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_is_am_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recycler_alarm_is_am"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_delete_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_alarm_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/recycler_alarm_time"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_is_am_text"
        app:layout_constraintStart_toEndOf="@+id/recycler_is_am_text" />

    <TextView
        android:id="@+id/recycler_alarm_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recycler_alarm_day"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_alarm_switch"
        app:layout_constraintEnd_toStartOf="@+id/recycler_alarm_switch"
        app:layout_constraintTop_toTopOf="@+id/recycler_alarm_switch" />

    <Switch
        android:id="@+id/recycler_alarm_switch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleX="1.1"
        android:scaleY="1.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


